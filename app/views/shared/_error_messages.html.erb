<div class="flex-grid">
  <div class="col">
    <% if locals[:errors].any? %>
      <div id="error_explanation">
        <h2><i class="fas fa-exclamation-circle"></i> <%= pluralize(locals[:errors].count, "error") %> prohibited from being submitted:</h2>
        <ul>
          <% locals[:errors].full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</div>
