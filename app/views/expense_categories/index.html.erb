<div class="flex-grid">
  <div class="col">
    <h1>Expense Categories</h1>
  </div>
</div>

<% if notice != nil %>
  <div class="flex-grid">
    <div class="col">
      <i class="fas fa-check-circle" id="notice"> <%= notice %></i>
    </div>
  </div>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @expense_categories.sort_by{ |e| e.name }.each do |expense_category| %>
      <tr>
      <td><%= link_to '-', expense_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= expense_category.name %></td>
        <td><%= link_to 'Edit', edit_expense_category_path(expense_category) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="flex-grid-links actions">
  <div class="col actions" id="single-link">
    <%= link_to 'New Expense Category', new_expense_category_path %>
  </div>
</div>