<p id="notice"><%= notice %></p>

<h1>Expense Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @expense_categories.sort_by{ |e| e.name }.each do |expense_category| %>
      <tr>
      <td><%= link_to '-', expense_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= expense_category.name %></td>
        <td><%= link_to 'Show', expense_category %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Expense Category', new_expense_category_path %>
