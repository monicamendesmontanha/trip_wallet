<% if admin? == false  %>

  <div class="flex-grid">
    <div class="col">
      <h1>My Trips</h1>
    </div>
  </div>

 <div class="flex-grid">
    <div class="col">
     <p id="notice"><%= notice %></p>
    </div>
</div>

  <div>
    <div>
      <table>
        <thead>
          <tr>
            <th></th>
            <th>Name</th>
            <th>Destination</th>
            <%# <th colspan="3"></th> %>
          </tr>
        </thead>

        <tbody>
          <% @trips.each do |trip| %>
            <tr>
              <td><%= link_to '-', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <td><%= link_to trip do %>
                  <%= trip.name %></td>
              <% end %>
              <td><%= trip.destination.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="flex-grid-links actions"">
    <div class="col actions" id="single-link">
      <%= link_to 'New Trip', new_trip_path %>
    </div>
  </div>

  </div>

<% end  %>
