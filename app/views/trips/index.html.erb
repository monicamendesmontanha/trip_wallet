<% if admin? == false  %>

  <div class="flex-grid">

     <p id="notice"><%= notice %></p>

    <div class="col">
      <h1>My Trips</h1>
    </div>
  </div>

  <div class="flex-grid">
    <div class="col">
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Destination</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @trips.each do |trip| %>
            <tr>
              <td><%= link_to '-', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <td><%= trip.name %></td>
              <td><%= trip.destination.name %></td>
              <td><%= link_to 'Show', trip %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="flex-grid-thirds">
    <div class="col">
      <%= link_to 'New Trip', new_trip_path %>
    </div>
  </div>

  </div>

<% end  %>
