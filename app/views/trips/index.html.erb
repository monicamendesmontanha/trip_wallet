<% if admin? == false  %>
  <div class="flex-grid">
    <div class="col">
      <h1>My Trips</h1>
    </div>
  </div>
  <% if notice != nil %>
    <div class="flex-grid">
      <div class="col">
        <i class="fas fa-check-circle" id="notice"> <%= notice %></i>
      </div>
    </div>
  <% end %>
  <div>
    <div>
      <table>
        <thead>
          <tr>
            <th></th>
            <th>Name</th>
            <th>Destination</th>
            <%# <th colspan="3"></th> %>
          </tr>
        </thead>
        <tbody>
          <% @trips.each do |trip| %>
            <tr>
              <td><%= link_to '-', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <td><%= link_to trip do %>
                  <%= trip.name %></td>
              <% end %>
              <td><%= trip.destination.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="flex-grid-links actions">
    <div class="col actions" id="single-link">
      <%= link_to 'New Trip', new_trip_path %>
    </div>
  </div>
<% end  %>
