<div class="flex-grid">
  <div class="col">
    <% if trip.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(trip.errors.count, "error") %> prohibited this trip from being saved:</h2>

        <ul>
        <% trip.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</div>

<div class="flex-grid">
    <%= form_with(model: trip, local: true) do |form| %>

  <div>
    <div class="col" id="login-form">
      <%= form.label :name %>
      <%= form.text_field :name, placeholder: "Summer Holiday", autofocus: true%>
    </div>

    <div class="col" id="login-form">
      <%= form.label :start_date %>
      <%= form.date_field :start_date, min: Date.today, value: Date.today %>
    </div>

    <div class="col" id="login-form">
      <%= form.label :end_date %>
      <%= form.date_field :end_date, value: Date.tomorrow %>
    </div>

    <div class="col" id="login-form">
      <%= form.label :budget %>
      <%= form.number_field :budget, placeholder: "AUD $   1000.00" %>
    </div>

    <div class="col" id="login-form">
      <%= form.label :destination %>
      <%= form.select :destination_id, Destination.all.map { |d| [d.name, d.id] }, include_blank: 'Please choose' %>
    </div>
  </div>

  <div class="col form-submit">
    <div class="form-submit-placeholder"></div>
    <div class="form-submit-action"><%= form.submit %></div>
  </div>
<% end %>
</div>
