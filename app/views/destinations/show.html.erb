<%= link_to 'Destinations', destinations_path %> |
<%= link_to 'Edit', edit_destination_path(@destination) %>



<% if notice != nil %>
  <div class="flex-grid">
    <div class="col">
      <i class="fas fa-check-circle" id="notice"> <%= notice %></i>
    </div>
  </div>
<% end %>


<p>
  <strong>Name:</strong>
  <%= @destination.name %>
</p>
<p>
  <strong>Currency:</strong>
  <%= @destination.currency %>
</p>
<p>
  <strong>Symbol:</strong>
  <%= @destination.symbol %>
</p>
<p>
  <strong>Exchange rate:</strong>
  <%= @destination.exchange_rate %>
</p>
